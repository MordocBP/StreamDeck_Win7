<UserControl x:Class="SDC.Conf_Cmd"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SDC"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <local:StringToIntConverter x:Key="StrToIntConv" />
    </UserControl.Resources>
    <StackPanel Margin="5" HorizontalAlignment="Left" >

        <TextBlock Foreground="White">AHK Command</TextBlock>
        <TextBox x:Name="textCmd" Width="350" HorizontalAlignment="Left" Text="{Binding Path=AHDCmd, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>

        <TextBlock  Foreground="White">Text</TextBlock>

        <TextBox x:Name="btnText" Width="350" HorizontalAlignment="Left" Text="{Binding Path=ButtonText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>

        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <CheckBox x:Name="isShowText"  Foreground="White" Margin="0,3,0,0" IsChecked="{Binding Path=ShowText, Mode=TwoWay}">Show</CheckBox>
            <ComboBox x:Name="posMode" Width="100" Margin="20,0,0,0" SelectionChanged="posMode_SelectionChanged" SelectedValue="{Binding Path=ButtonTextPosition, Mode=TwoWay}" />
            <Label Foreground="White">Top Margin</Label>
            <TextBox x:Name="topMargin" Width="100" PreviewTextInput="NumberValidationTextBox" Text="{Binding Path=TextTopMargin, Mode=TwoWay, Converter={StaticResource StrToIntConv}, UpdateSourceTrigger=PropertyChanged}">
            </TextBox>
        </StackPanel>

    </StackPanel>
</UserControl>
